{
  "_comment": "REPLOID User Configuration Overrides",
  "_description": "This file contains optional overrides for config.json. Only include settings you want to change from defaults. Copy this to .reploidrc.json and customize.",

  "providers": {
    "_comment": "Override default provider and model names",
    "default": "gemini",
    "geminiModelFast": "gemini-2.5-flash-lite",
    "geminiModelBalanced": "gemini-2.5-flash"
  },

  "ui": {
    "_comment": "Customize UI appearance and behavior",
    "theme": "neon",
    "showAdvancedLogs": true,
    "statusUpdateInterval": 500
  },

  "server": {
    "_comment": "Server configuration (for proxy mode)",
    "port": 8000,
    "host": "localhost",
    "corsOrigins": [
      "http://localhost:8080",
      "http://localhost:3000"
    ]
  },

  "api": {
    "_comment": "API client settings",
    "provider": "local",
    "timeout": 120000,
    "maxRetries": 5
  },

  "ollama": {
    "_comment": "Ollama local model settings",
    "autoStart": false,
    "defaultModel": "llama3.1:latest",
    "fallbackModel": "gemma2:latest",
    "temperature": 0.8,
    "maxTokens": 8192
  },

  "curatorMode": {
    "_comment": "Automated review and approval settings",
    "enabled": true,
    "autoApproveContext": false,
    "maxProposalsPerGoal": 5
  },

  "permissions": {
    "_comment": "Override tool permissions (allow/ask/deny)",
    "policies": [
      {
        "tool": "read",
        "rule": "allow"
      },
      {
        "tool": "write",
        "rule": "allow",
        "_comment": "CAUTION: Allowing write without confirmation can be dangerous"
      },
      {
        "tool": "bash",
        "rule": "ask",
        "_comment": "Changed from deny to ask - will prompt for each bash command"
      },
      {
        "tool": "delete",
        "rule": "deny"
      }
    ]
  },

  "structuredCycle": {
    "_comment": "Override structured cycle behavior",
    "confidenceThresholds": {
      "autoApply": 0.90,
      "showWarning": 0.60,
      "requireApproval": 0.40
    }
  },

  "_examples": {
    "_comment": "Common override scenarios",

    "example_1_cloud_only": {
      "providers": {
        "default": "openai"
      },
      "api": {
        "provider": "openai"
      }
    },

    "example_2_local_only": {
      "providers": {
        "default": "local"
      },
      "api": {
        "provider": "local"
      },
      "ollama": {
        "defaultModel": "qwen3.3:latest"
      }
    },

    "example_3_permissive_dev": {
      "_comment": "For trusted development environments - allows all operations",
      "permissions": {
        "policies": [
          {"tool": "read", "rule": "allow"},
          {"tool": "write", "rule": "allow"},
          {"tool": "bash", "rule": "allow"},
          {"tool": "delete", "rule": "ask"}
        ]
      }
    },

    "example_4_locked_down": {
      "_comment": "Maximum security - everything requires confirmation",
      "permissions": {
        "policies": [
          {"tool": "read", "rule": "allow"},
          {"tool": "write", "rule": "ask"},
          {"tool": "bash", "rule": "deny"},
          {"tool": "delete", "rule": "deny"},
          {"tool": "execute_python", "rule": "ask"}
        ]
      }
    }
  }
}
