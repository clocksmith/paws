{
  "name": "@mwp/dashboard",
  "version": "1.0.0",
  "description": "MCP Widget Protocol Dashboard - Reference host implementation for loading and displaying widgets",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mwp/core": "workspace:*",
    "@mwp/bridge": "workspace:*",
    "@mwp/eventbus": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "keywords": [
    "mcp",
    "mcp-widget-protocol",
    "dashboard",
    "widget-host",
    "web-components"
  ],
  "author": "MWP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mwp.git",
    "directory": "packages/dashboard"
  }
}
