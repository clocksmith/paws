{
  "servers": [
    {
      "name": "filesystem",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./sandbox"],
      "description": "File system operations scoped to sandbox directory"
    },
    {
      "name": "memory",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Key-value memory store for agent context"
    },
    {
      "name": "fetch",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "HTTP client for fetching external data"
    },
    {
      "name": "sequential-thinking",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Step-by-step reasoning and problem solving"
    }
  ],
  "examples": [
    {
      "name": "Research Pipeline",
      "description": "Fetch data, analyze it, and store findings",
      "steps": [
        {
          "server": "fetch",
          "tool": "fetch",
          "args": {
            "url": "https://api.github.com/repos/modelcontextprotocol/servers"
          }
        },
        {
          "server": "sequential-thinking",
          "tool": "create_thinking_session",
          "args": {
            "topic": "Analyze GitHub repository data"
          }
        },
        {
          "server": "memory",
          "tool": "store",
          "args": {
            "key": "research_results",
            "value": "{{previous_result}}"
          }
        }
      ]
    },
    {
      "name": "File Analysis",
      "description": "Read file, analyze content, write summary",
      "steps": [
        {
          "server": "filesystem",
          "tool": "read_file",
          "args": {
            "path": "./sandbox/example.txt"
          }
        },
        {
          "server": "sequential-thinking",
          "tool": "create_thinking_session",
          "args": {
            "topic": "Summarize file content"
          }
        },
        {
          "server": "filesystem",
          "tool": "write_file",
          "args": {
            "path": "./sandbox/summary.txt",
            "content": "{{summary}}"
          }
        }
      ]
    }
  ]
}
