{
  "name": "@mwp/core",
  "version": "1.0.0",
  "description": "Core types, schemas, and utilities for MCP Widget Protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./schemas/*.json": {
      "import": "./dist/schemas/*.schema.json",
      "require": "./dist/schemas/*.schema.json"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias && pnpm schemas:generate && pnpm schemas:copy",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "schemas:generate": "tsx scripts/generate-json-schemas.ts",
    "schemas:copy": "tsx scripts/copy-schemas-to-spec.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "mwp",
    "types",
    "schemas"
  ],
  "author": "MWP Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0",
    "zod-to-json-schema": "^3.22.4"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
