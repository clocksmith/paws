{
  "title": "AI Researcher Workspace",
  "servers": [
    {
      "name": "brave",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-brave-search"],
        "env": {
          "BRAVE_API_KEY": "${BRAVE_API_KEY}"
        }
      }
    },
    {
      "name": "fetch",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-fetch"]
      }
    },
    {
      "name": "memory",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"],
        "env": {
          "MEMORY_STORE_PATH": "./.data/researcher-memory.json"
        }
      }
    },
    {
      "name": "sequential-thinking",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
      }
    }
  ],
  "widgets": [
    {
      "package": "@mwp/widget-brave",
      "serverName": "brave",
      "id": "research-search",
      "position": { "x": 0, "y": 0 },
      "size": { "w": 6, "h": 4 }
    },
    {
      "package": "@mwp/widget-fetch",
      "serverName": "fetch",
      "id": "research-reader",
      "position": { "x": 6, "y": 0 },
      "size": { "w": 6, "h": 4 },
      "options": {
        "autoSummarize": true
      }
    },
    {
      "package": "@mwp/widget-memory",
      "serverName": "memory",
      "id": "research-memory",
      "position": { "x": 0, "y": 4 },
      "size": { "w": 4, "h": 4 },
      "options": {
        "collections": ["research-notes"],
        "view": "kanban"
      }
    },
    {
      "package": "@mwp/widget-sequential-thinking",
      "serverName": "sequential-thinking",
      "id": "research-analyst",
      "position": { "x": 4, "y": 4 },
      "size": { "w": 8, "h": 4 },
      "options": {
        "defaultPrompt": "research_synthesis",
        "memoryCollections": ["research-notes"],
        "autoAttachMemory": true
      }
    }
  ],
  "eventBridges": [
    {
      "source": "research-search",
      "on": "brave:result:selected",
      "emit": "fetch:url:invoke-requested"
    },
    {
      "source": "research-reader",
      "on": "fetch:summary:ready",
      "emit": "memory:write-requested",
      "payloadTemplate": {
        "collection": "research-notes",
        "tags": ["web", "summary"],
        "content": "{{summary}}",
        "metadata": {
          "url": "{{url}}"
        }
      }
    },
    {
      "source": "research-memory",
      "on": "memory:write:succeeded",
      "emit": "sequential-thinking:prompt:update"
    }
  ],
  "layout": {
    "type": "grid",
    "columns": 12,
    "gutter": 16
  }
}
