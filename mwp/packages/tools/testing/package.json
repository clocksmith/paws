{
  "name": "@mcp-wp/testing",
  "version": "1.0.0",
  "description": "Testing utilities for MCP-WP widget development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks.d.ts",
      "import": "./dist/mocks.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures.d.ts",
      "import": "./dist/fixtures.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest"
  },
  "dependencies": {
    "@mcp-wp/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/ui": "^1.1.0",
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "vitest": "^1.0.0"
  },
  "keywords": [
    "mcp",
    "mcp-widget",
    "testing",
    "mocks",
    "fixtures",
    "test-utils"
  ],
  "author": "MCP-WP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mcp-wp.git",
    "directory": "packages/tools/testing"
  }
}
