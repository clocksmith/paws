{
  "name": "@mwp/validator",
  "version": "1.0.0",
  "description": "MWP protocol conformance validator",
  "type": "module",
  "bin": {
    "mwp-validate": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mwp/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "ora": "^7.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "mcp-widget",
    "validator",
    "conformance",
    "lint"
  ],
  "author": "MWP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mwp.git",
    "directory": "packages/tools/validator"
  }
}
