{
  "name": "create-mcp-widget",
  "version": "1.0.0",
  "description": "Interactive CLI for scaffolding MCP-WP widgets",
  "type": "module",
  "bin": {
    "create-mcp-widget": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "mcp-widget",
    "cli",
    "scaffold",
    "generator",
    "create"
  ],
  "author": "MCP-WP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mcp-wp.git",
    "directory": "packages/tools/create-mcp-widget"
  }
}
